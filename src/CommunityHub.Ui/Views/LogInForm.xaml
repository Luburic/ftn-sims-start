<Window x:Class="CommunityHub.Ui.Views.LogInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Prijava" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Korisničko ime:" FontSize="14" Margin="0,0,0,5"/>
        <TextBox Grid.Row="0" x:Name="UsernameTextBox" FontSize="14" Padding="5" Margin="0,30,0,0"/>

        <TextBlock Grid.Row="2" Text="Lozinka:" FontSize="14" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="2" x:Name="PasswordBox" FontSize="14" Padding="5" Margin="0,30,0,0"/>

        <TextBlock Grid.Row="4" x:Name="ErrorMessageTextBlock"
                   Foreground="Red" FontSize="12"
                   TextWrapping="Wrap" Visibility="Collapsed"/>

        <Button Grid.Row="6" Content="Prijavi se"
                FontSize="14" Padding="10"
                Click="LoginButton_Click"/>
    </Grid>
</Window>
